# Naming Style (how it should look)

dotnet_naming_style.interface_prefix_i.required_prefix = I
dotnet_naming_style.interface_prefix_i.required_suffix =
dotnet_naming_style.interface_prefix_i.word_separator =
dotnet_naming_style.interface_prefix_i.capitalization = pascal_case

dotnet_naming_style.pascal_case.required_prefix =
dotnet_naming_style.pascal_case.required_suffix =
dotnet_naming_style.pascal_case.word_separator =
dotnet_naming_style.pascal_case.capitalization = pascal_case

dotnet_naming_style.camel_case.required_prefix =
dotnet_naming_style.camel_case.required_suffix =
dotnet_naming_style.camel_case.word_separator =
dotnet_naming_style.camel_case.capitalization = camel_case

dotnet_naming_style.private_field.required_prefix = _
dotnet_naming_style.private_field.required_suffix =
dotnet_naming_style.private_field.word_separator =
dotnet_naming_style.private_field.capitalization = camel_case

# Naming Rules (what to enforce for what symbols)

dotnet_diagnostic.IDE1006.severity = warning # Warn during build for all naming rule violations

dotnet_naming_rule.interfaces_must_start_with_i.severity = warning
dotnet_naming_rule.interfaces_must_start_with_i.style = interface_prefix_i
dotnet_naming_rule.interfaces_must_start_with_i.symbols = interfaces
dotnet_naming_symbols.interfaces.applicable_kinds = interface
dotnet_naming_symbols.interfaces.applicable_accessibilities = public, internal

dotnet_naming_rule.types_must_be_pascal_case.severity = warning
dotnet_naming_rule.types_must_be_pascal_case.style = pascal_case
dotnet_naming_rule.types_must_be_pascal_case.symbols = types
dotnet_naming_symbols.types.applicable_kinds = class, struct, enum
dotnet_naming_symbols.types.applicable_accessibilities = public, internal, private, protected, protected_internal, private_protected

# disabled because of false positive for primary constructor parameters
#dotnet_naming_rule.parameters_camel_case.severity = warning
#dotnet_naming_rule.parameters_camel_case.style = camel_case
#dotnet_naming_rule.parameters_camel_case.symbols = parameters
#dotnet_naming_symbols.parameters.applicable_kinds = parameter

dotnet_naming_rule.locals_camel_case.severity = warning
dotnet_naming_rule.locals_camel_case.style = camel_case
dotnet_naming_rule.locals_camel_case.symbols = locals
dotnet_naming_symbols.locals.applicable_kinds = local

dotnet_naming_rule.all_members_pascal_case.severity = warning
dotnet_naming_rule.all_members_pascal_case.style = pascal_case
dotnet_naming_rule.all_members_pascal_case.symbols = all_members
dotnet_naming_symbols.all_members.applicable_kinds = method, property, event, delegate
dotnet_naming_symbols.all_members.applicable_accessibilities = public, internal, protected, protected_internal, private_protected, private

dotnet_naming_rule.const_fields_pascal_case.severity = warning
dotnet_naming_rule.const_fields_pascal_case.style = pascal_case
dotnet_naming_rule.const_fields_pascal_case.symbols = const_fields
dotnet_naming_symbols.const_fields.applicable_kinds = field
dotnet_naming_symbols.const_fields.applicable_accessibilities = public, internal, protected, protected_internal, private_protected, private
dotnet_naming_symbols.const_fields.required_modifiers = const

dotnet_naming_rule.static_readonly_fields_pascal_case.severity = warning
dotnet_naming_rule.static_readonly_fields_pascal_case.style = pascal_case
dotnet_naming_rule.static_readonly_fields_pascal_case.symbols = static_readonly_fields
dotnet_naming_symbols.static_readonly_fields.applicable_kinds = field
dotnet_naming_symbols.static_readonly_fields.applicable_accessibilities = private
dotnet_naming_symbols.static_readonly_fields.required_modifiers = static, readonly

dotnet_naming_rule.instance_readonly_fields_underscore_camel_case.severity = warning
dotnet_naming_rule.instance_readonly_fields_underscore_camel_case.style = private_field
dotnet_naming_rule.instance_readonly_fields_underscore_camel_case.symbols = instance_readonly_fields
dotnet_naming_symbols.instance_readonly_fields.applicable_kinds = field
dotnet_naming_symbols.instance_readonly_fields.applicable_accessibilities = private
dotnet_naming_symbols.instance_readonly_fields.required_modifiers = readonly

dotnet_naming_rule.private_nonconst_fields_underscore_camel_case.severity = warning
dotnet_naming_rule.private_nonconst_fields_underscore_camel_case.style = private_field
dotnet_naming_rule.private_nonconst_fields_underscore_camel_case.symbols = private_nonconst_fields
dotnet_naming_symbols.private_nonconst_fields.applicable_kinds = field
dotnet_naming_symbols.private_nonconst_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_nonconst_fields.required_modifiers =

